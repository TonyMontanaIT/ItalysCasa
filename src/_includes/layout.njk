<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  {% if page.description %}
  <meta name="description" content="{{ page.description }}">
{% else %}
  <meta name="description" content="ItalysCasa - Agenzia immobiliare in Calabria, vendita, affitto, consulenza.">
{% endif %}
  <title>{% if page.title %}{{ page.title }} | ItalysCasa{% else %}ItalysCasa{% endif %}</title>
  <link rel="stylesheet" href="/styles/Common.css">
  {% if page.fileSlug.startsWith('anunci') %}
    <link rel="stylesheet" href="/styles/anunci.css">
  {% endif %}
  
  <nav id="breadcrumbs" class="breadcrumbs"></nav>

<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
<noscript>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
</noscript>
<link rel="icon" href="/favicon.ico" sizes="any">
<link rel="icon" href="/Foto/Icon/favicon.svg" type="image/svg+xml">
<link rel="alternate icon" href="/Foto/Icon/favicon.svg" type="image/x-icon">

  <!-- Google Tag Manager -->
<script>
  window.addEventListener('load', () => {
    const loadGTM = () => {
      const script = document.createElement('script');
      script.src = 'https://www.googletagmanager.com/gtm.js?id=GTM-5M3T97HB';
      document.head.appendChild(script);
    };

    if ('requestIdleCallback' in window) {
      requestIdleCallback(loadGTM);
    } else {
      setTimeout(loadGTM, 2000);
    }
  });
</script>

 
</head>

<body>
<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5M3T97HB"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
    {% include "header.njk" %}
    <main>
        {{ content | safe }}
    </main>
    {% include "footer.njk" %}
    <script src="/script/Common.js"></script>
</body>
</html>
